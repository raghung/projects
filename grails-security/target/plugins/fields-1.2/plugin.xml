<plugin name='fields' version='1.2' grailsVersion='2.0 &gt; *'>
  <author>Rob Fletcher</author>
  <authorEmail>rob@freeside.co</authorEmail>
  <title>Fields Plugin</title>
  <description>Customizable form-field rendering based on overrideable GSP template</description>
  <documentation>http://freeside.co/grails-fields</documentation>
  <type>FieldsGrailsPlugin</type>
  <resources>
    <resource>grails.plugin.formfields.FormFieldsTemplateService</resource>
    <resource>grails.plugin.formfields.FormFieldsTagLib</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://plugins.grails.org' />
    <repository name='http://repo.grails.org/grails/plugins' url='http://repo.grails.org/grails/plugins/' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='grailsCore' url='http://svn.codehaus.org/grails/trunk/grails-plugins' />
    <repository name='http://grails.org/plugins' url='http://grails.org/plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
  </repositories>
  <dependencies>
    <test>
      <dependency group='org.jodd' name='jodd-wot' version='3.3.1' />
      <dependency group='javassist' name='javassist' version='3.12.0.GA' />
    </test>
  </dependencies>
  <plugins />
  <runtimePluginRequirements />
  <behavior />
</plugin>